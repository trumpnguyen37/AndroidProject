<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:layout_marginVertical="32dp"
        android:layout_marginHorizontal="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textStyle="bold"
            android:text="TÊN MÁY"
            android:textColor="#000"
            android:textAlignment="center"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textStyle="bold"
            android:text="DANH MỤC"
            android:textColor="#000"
            android:textAlignment="center"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textStyle="bold"
            android:text="TÙY CHỌN"
            android:textColor="#000"
            android:textAlignment="center"
            android:textSize="18sp"/>
    </LinearLayout>

    <ListView
        android:id="@+id/computerListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_marginTop="32dp"
        android:divider="@null"
        android:layout_marginHorizontal="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button_listview"
        android:layout_below="@+id/computerListView"
        android:orientation="vertical"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="32dp"
        android:padding="16dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên máy"
            android:textColor="#fff"
            android:textColorHint="#f8f8f8"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Chọn danh mục"
            android:textColorHint="#f8f8f8">

            <AutoCompleteTextView
                android:id="@+id/danhMucCombobox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="none"
                android:textColor="#fff"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/themMoiButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_listview"
            android:backgroundTint="#fff"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="32dp"
            android:text="thêm mới"
            android:textColor="#000"
            android:textSize="15sp"/>
    </LinearLayout>
</RelativeLayout>